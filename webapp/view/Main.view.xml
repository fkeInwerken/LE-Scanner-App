<mvc:View controllerName="inw.le_scanner.controller.Main" displayBlock="true" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:ndc="sap.ndc" core:require="{
		formatter: 'inw/le_scanner/model/formatter'
	}">
	<Page title="{i18n>appTitle}" id="page" class="sapUiContentPadding">
		<headerContent>
			<Button text="{viewModel>/appVersion}" enabled="false" type="Transparent" />
		</headerContent>
		<content>
			<Label text="{i18n>palletLabel}" required="true" class="sapUiSmallMarginTop" />
			<HBox class="container" width="100%" alignItems="Center">
				<VBox class="input-container" width="89%">
					<Input id="istLagereinheitBarcode" value="{viewModel>/istLagereinheitBarcode}" width="100%" class="input-field" />
					<VBox  width="100%" height="3rem" alignItems="Stretch" justifyContent="Center" class="input-overlay">
						<Button id="inputOverlayIstLagereinheit" text="" type="Transparent" press=".onOverlayPress" class="overlay-button" />
					</VBox>
				</VBox>
				<Button id="palletButton" type="Default" icon="sap-icon://keyboard-and-mouse" press="onKeyboardAction" class="keyboard-button" width="11%" />
			</HBox>
			<Text id="taPlaceholder" text="{i18n>TAPlaceholder}" width="20%" class="sapUiSmallMarginTop" textAlign="Center">
			</Text>
			<Input id="TANummer" value="{viewModel>/TANummer}" visible="true" editable="false" width="80%" />
			<Text id="posPlaceholder" text="{i18n>PosPlaceholder}" width="20%" class="sapUiSmallMarginTop" textAlign="Center">
			</Text>
			<Input id="anzahlPositionen" value="{viewModel>/anzahlPositionen}" visible="true" editable="false" width="80%" />
			<Label text="{i18n>storageLocationLabel}" class="sapUiLargeMarginTop" />
			<HBox class="container" width="100%" alignItems="Center">
				<VBox class="input-container" width="89%">
					<Input id="istLagerplatzBarcode" value="{viewModel>/istLagerplatzBarcode}" width="100%" class="input-field" />
					<VBox  width="100%" height="3rem" alignItems="Stretch" justifyContent="Center" class="input-overlay">
						<Button id="inputOverlayLagerplatz" text="" type="Transparent" press=".onOverlayPress" class="overlay-button" />
					</VBox>
				</VBox>
				<Button id="lagerButton" type="Default" icon="sap-icon://keyboard-and-mouse" press="onKeyboardAction" class="keyboard-button" width="11%" />
			</HBox>
			<Label text="{i18n>storageUnitLabel}" required="true" class="sapUiLargeMarginTop" />
			<HBox class="container" width="100%" alignItems="Center">
				<VBox class="input-container" width="89%">
					<Input id="sollLagereinheitBarcode" value="{viewModel>/sollLagereinheitBarcode}" width="100%" class="input-field" />
					<VBox  width="100%" height="3rem" alignItems="Stretch" justifyContent="Center" class="input-overlay">
						<Button id="inputOverlaySollLagereinheit" text="" type="Transparent" press=".onOverlayPress" class="overlay-button" />
					</VBox>
				</VBox>
				<Button id="einheitButton" type="Default" icon="sap-icon://keyboard-and-mouse" press="onKeyboardAction" class="keyboard-button" width="11%" />
			</HBox>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer />
				<Button id="buchenButton" text="{i18n>postButton}" type="Emphasized" press="onBuchenPress" />
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
