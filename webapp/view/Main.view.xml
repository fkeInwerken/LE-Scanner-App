<mvc:View controllerName="inw.le_scanner.controller.Main" displayBlock="true" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:ndc="sap.ndc" core:require="{
		formatter: 'inw/le_scanner/model/formatter'
	}">
	<Page title="{i18n>appTitle}" id="page">
		<content>
			<Label text="Paletten Barcode:" required="true" class="sapUiSmallMarginTop" />
			<Input id="istLagereinheitBarcode" value="{viewModel>/istLagereinheitBarcode}" width="100%">
				<customData>
					<core:CustomData key="inputmode" value="none" writeToDom="true" />
				</customData>
			</Input>
			<VBox>
				<Input id="TANummer" value="{viewModel>/TANummer}" visible="true" editable="false" />
				<Input id="anzahlPositionen" value="{viewModel>/anzahlPositionen}" visible="true" editable="false" />
				<Input id="Lagerplatz" value="{viewModel>/Lagerplatz}" visible="true" editable="false" />
			</VBox>
			<Text text="" />
			<Label text="Lagerplatz Barcode:" class="sapUiLargeMarginTop" />
			<Input id="wechselLagerplatzBarcode" value="{viewModel>/wechselLagerplatzBarcode}" width="100%">

			</Input>
			<Label text="Lagereinheit Barcode:" required="true" class="sapUiLargeMarginTop" />
			<Input id="sollLagereinheitBarcode" value="{viewModel>/sollLagereinheitBarcode}" width="100%">

			</Input>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer />
				<Button id="buchenButton" text="Buchen" type="Emphasized" press="onBuchenPress" />
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
